<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:broker="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

    <broker:broker xmlns="http://activemq.apache.org/schema/core" brokerName="localhost" dataDirectory="${activemq.data}/kahadb">
        <broker:transportConnectors>
            <broker:transportConnector name="openwire" uri="tcp://0.0.0.0:61616?wireFormat.maxFrameSize=1073741824"/>
            <broker:transportConnector name="amqp" uri="amqp://0.0.0.0:5672?transport.maxFrameSize=1073741824"/>
            <broker:transportConnector name="stomp" uri="stomp://0.0.0.0:61613"/>
            <broker:transportConnector name="mqtt" uri="mqtt://0.0.0.0:1883"/>
            <broker:transportConnector name="ws" uri="ws://0.0.0.0:61614"/>
        </broker:transportConnectors>
    </broker:broker>

</beans>

